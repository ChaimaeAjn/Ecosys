<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EcoSys"
             xmlns:converters="clr-namespace:EcoSys.Converters"
             x:Class="EcoSys.App"
             RequestedThemeVariant="Default">
    <Application.Resources>
        <!-- Converters -->
        <converters:DivideByDoubleConverter x:Key="DivideByDoubleConverter"/>
        <converters:HeartsToVisibilityConverter x:Key="HeartsToVisibilityConverter"/>
    </Application.Resources>
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>